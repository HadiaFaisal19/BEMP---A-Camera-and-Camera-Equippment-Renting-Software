@page "/updateproduct/{productId:int}"
@using ClassLibraryModel
@using ClassLibraryDal
@rendermode InteractiveServer
@inject NavigationManager Navigation
@code {
    [Parameter]
    public int productId { get; set; }

    private Product productToUpdate = new Product();

    protected override async Task OnInitializedAsync()
    {
        productToUpdate = await Task.Run(() => DalProductDetails.GetProductById(productId));
    }

    private async Task UpdateProductDetails()
    {
        await Task.Run(() => DalProductDetails.UpdateProduct(productToUpdate));
        Navigation.NavigateTo("/productlist");
    }
}

<h2>Update Product</h2>

<div class="form-container">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" @bind="productToUpdate.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" id="category" @bind="productToUpdate.Category" class="form-control" />
    </div>
    <div class="form-group">
        <label for="brand">Brand:</label>
        <input type="text" id="brand" @bind="productToUpdate.Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        <input type="text" id="price" @bind="productToUpdate.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" @bind="productToUpdate.Description" class="form-control description-box"></textarea>
    </div>
    <div class="form-group">
        <label>Available:</label>
        <InputRadioGroup @bind-Value="productToUpdate.IsAvailable">
            <div class="radio-group">
                <InputRadio class="radio-but" id="AvailableYes" Value="true" /> Yes
                <InputRadio class="radio-but radio-button" id="AvailableNo" Value="false" /> No
            </div>
        </InputRadioGroup>
    </div>
    <div class="button-container">
        <button @onclick="UpdateProductDetails" class="submit-button">Update Product</button>
    </div>
</div>

